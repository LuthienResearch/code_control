# LCC Configuration
LCC_URL=http://localhost:8000
LCC_API_PROVIDER=anthropic

# Backend API Configuration (used by the server)
# The server will use this to authenticate with the LLM provider
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative: use LCC_API_KEY directly
# LCC_API_KEY=your_anthropic_api_key_here
# LCC_API_KEY_HEADER=x-api-key    # Default for Anthropic

# For OpenAI, use:
# LCC_API_PROVIDER=openai
# OPENAI_API_KEY=your_openai_key_here
# or LCC_API_KEY=your_openai_key_here
# LCC_API_KEY_HEADER=Authorization